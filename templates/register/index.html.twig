{% extends '@CoddinIdentityProvider/base.html.twig' %}

{% block body %}
    <div class="min-h-full flex flex-col justify-center py-8 sm:px-6 lg:px-8">
        <div class="-mt-24">
            <div class="sm:mx-auto sm:w-full sm:max-w-md">
                <img class="mx-auto h-12 w-auto" src="{{ asset('bundles/coddinidentityprovider/build/images/logo.svg') }}" alt="Workflow">
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    {{ 'account.register.title'|trans({'%companyName%': companyName}) }}
                </h2>
            </div>

            <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
                <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                    {% set errorMessages = app.flashes(constant('Coddin\\IdentityProvider\\Request\\UserRegistration::FLASH_BAG_ERROR_TYPE')) %}
                    {% if errorMessages|length > 0 %}
                        <div class="bg-orange-100 border-l-4 border-orange-500 text-orange-700 p-4" role="alert">
                            <p class="font-bold">{{ 'generic.validation_error'|trans }}</p>
                            {% for errorMsg in errorMessages %}
                                <p>{{ errorMsg|trans }}</p>
                            {% endfor %}
                        </div>
                    {% endif %}
                    <form class="space-y-6" action="{{ url('coddin_identity_provider.register.submit') }}" method="post">
                        <input type="hidden" name="_target_path" value="/login">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div>
                            <label for="username" class="block text-sm font-medium text-gray-700">
                                {{ 'account.register.username'|trans }}
                            </label>
                            <div class="mt-1">
                                <input id="username" name="username" type="text" autocomplete="username" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                            </div>
                            <span class="text-xs italic">
                                {{ 'account.register.username.help'|trans }}
                            </span>
                        </div>

                        <div>
                            <label for="password" class="block text-sm font-medium text-gray-700">
                                {{ 'account.register.password'|trans }}
                            </label>
                            <div class="mt-1">
                                <input id="password" name="password" type="password" autocomplete="off" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                            </div>
                        </div>

                        <div>
                            <label for="password_repeat" class="block text-sm font-medium text-gray-700">
                                {{ 'account.register.password_repeat'|trans }}
                            </label>
                            <div class="mt-1">
                                <input id="password_repeat" name="password_repeat" type="password" autocomplete="off" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                            </div>
                        </div>

                        {% if errors['general'] is defined %}
                            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                                <strong class="font-bold">Error</strong>
                                <span class="block sm:inline">{{ errors['general'] }}</span>
                            </div>
                        {% endif %}

                        <div class="flex items-center justify-between">
                            <div class="text-sm">
                                {{ 'account.register.existing_user'|trans }}
                                <a href="{{ url('coddin_identity_provider.login') }}" class="font-medium text-indigo-600 hover:text-indigo-500">
                                    {{ 'account.register.sign_in'|trans }}
                                </a>
                            </div>
                        </div>

                        <div>
                            <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                {{ 'account.register.register'|trans }}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
